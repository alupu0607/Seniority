      <div class="signup">
         <img src="../../assets/images/business-signup2.jpg" alt="image" class="retirement-home-signup__bg">

         <form method = "POST" action="/auth/retirement-home-signup.html" class="retirement-home-signup__form">
            <h1 class="retirement-home-signup__title">Become our new partner</h1>

            <div class="retirement-home-signup__inputs">
               <div class="retirement-home-signup__box">
                  <input type="email"  name="email" placeholder="Email" required class="retirement-home-signup__input">
                  <i class="ri-mail-fill"></i>
               </div>

                <div class="retirement-home-signup__box">
                    <input  placeholder="Retirement home name" name  = "name" required class="retirement-home-signup__input">
                    <i class="ri-user-fill"></i>
                </div>
                <div class="retirement-home-signup__box">
                  <input  placeholder="Rating" name = "rating" required class="retirement-home-signup__input">
                  <i class="ri-star-fill"></i>
              </div>
                <div class="retirement-home-signup__box">
                    <input  placeholder="Phone" name = "phone_number" required class="retirement-home-signup__input">
                    <i class="ri-phone-fill"></i>
                </div>
                <div class="retirement-home-signup__box">
                  <input  placeholder="Website (or N/A if non existing)" name = "website" required class="retirement-home-signup__input">
                  <i class="ri-global-line"></i>
              </div>
              <div class="retirement-home-signup__box">
                <input  placeholder="City" name = "city" required class="retirement-home-signup__input">
                <i class="ri-building-line"></i>
              </div>
              <div class="retirement-home-signup__box">
                <input  placeholder="Latitude" name = "latitude" required class="retirement-home-signup__input">
                <i class="ri-building-line"></i>
              </div>
              <div class="retirement-home-signup__box">
                <input  placeholder="Longitude" name = "longitude" required class="retirement-home-signup__input">
                <i class="ri-building-line"></i>
              </div>
               <div class="retirement-home-signup__box">
                  <input type="password" placeholder="Password" name = "password" required class="retirement-home-signup__input">
                  <i class="ri-lock-2-fill"></i>
               </div>

               <div class="retirement-home-signup__box">
                <input type="password" placeholder="Confirm Password" name = "confirm_password" required class="retirement-home-signup__input">
                <i class="ri-lock-2-fill"></i>
             </div>
            </div>

            <div class="retirement-home-signup__check">
               <div class="retirement-home-signup__check-box">
                  <input type="checkbox" class="retirement-home-signup__check-input" id="user-check">
                  <label for="user-check" class="retirement-home-signup__check-label">Remember me</label>
               </div>

               <a href="forgot-password-retirement-home.html" class="retirement-home-signup__forgot">Forgot Password?</a>
            </div>
            <% if (errorMessage) { %>
               <div class="alert alert-danger">
                 <%= errorMessage %>
               </div>
             <% } %>
            <button type="submit" class="retirement-home-signup__button">Sign up</button>

            <div class="retirement-home-signup__register">
               Already have an account? <a href="../auth/retirement-home-signin.html">Sign in</a> <br>
               ...or maybe register as a senior instead! <a href="../auth/signin.html">Take me there</a>
            </div>
         </form>
