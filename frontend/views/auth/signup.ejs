   <body>
      <header>
         <section class="navigation">
            <div class="nav-container">
              <div class="brand">
                <a href="../info/about.html">üçÄSENIORITY</a>
              </div>
              <nav>
                <div class="nav-mobile">
                  <a id="nav-toggle" href="#!"><span></span></a>
                </div>
                <ul class="nav-list">
                  <% if (isAuthenticated) { %>
                    <% if (accountType === 'User') { %>
                      <li>
                        <a href="#!">My Senior Account</a>
                        <ul class="nav-dropdown">
                            <li><a href="#!">Explore</a></li>
                          <li><a href="#!" class="non-clickable">Profile Settings</a></li>
                          <li><a href="#!" onclick="logout()">Logout</a></li>
                        </ul>
                      </li>
                    <% } else if (accountType === 'RetirementHome') { %>
                      <li>
                        <a href="#!">My Partner Account</a>
                        <ul class="nav-dropdown">
                          <li><a href="#!" class="non-clickable">Welcome, <%= email %></a></li>
                          <li><a href="#!">Manage</a></li>
                          <li><a href="#!">Profile Details</a></li>
                          <li><a href="/auth/logout">Logout</a></li>
                        </ul>
                      </li>
                    <% } %>
                  <% } else { %>
                    <li><a href="../auth/signin.html">Login</a></li>
                  <% } %>
                </ul>
              </nav>
            </div>
          </section>
      </header>
      <div class="signup">
         <img src="../../assets/images/login-form.jpg" alt="image" class="signup__bg">

         <form method = "POST" action="/auth/signup.html" class="signup__form">
            <h1 class="signup__title">Sign up</h1>

            <div class="signup__inputs">
               <div class="signup__box">
                  <input type="email"  name="email" placeholder="Email" required class="signup__input">
                  <i class="ri-mail-fill"></i>
               </div>

               <div class="signup__box">
                    <input  placeholder="Surname" name="surname" required class="signup__input">
                    <i class="ri-user-fill"></i>
               </div>
                <div class="signup__box">
                    <input  placeholder="Name" name  = "name" required class="signup__input">
                    <i class="ri-user-fill"></i>
                </div>
                <div class="signup__box">
                    <input  placeholder="Phone" name = "phone" required class="signup__input">
                    <i class="ri-phone-fill"></i>
                </div>
                <div class="signup__box">
                    <input type="date" placeholder="Birthdate" name = "birthdate" required class="signup__input">
                    <i class="ri-calendar-fill"></i>
                </div>
               <div class="signup__box">
                  <input type="password" placeholder="Password" name = "password" required class="signup__input">
                  <i class="ri-lock-2-fill"></i>
               </div>

               <div class="signup__box">
                <input type="password" placeholder="Confirm Password" name = "confirm_password" required class="signup__input">
                <i class="ri-lock-2-fill"></i>
             </div>
            </div>

            <div class="signup__check">
               <div class="signup__check-box">
                  <input type="checkbox" class="signup__check-input" id="user-check">
                  <label for="user-check" class="signup__check-label">Remember me</label>
               </div>

               <a href="forgot-password.html" class="signup__forgot">Forgot Password?</a>
            </div>
            <% if (errorMessage) { %>
               <div class="alert alert-danger">
                 <%= errorMessage %>
               </div>
             <% } %>
            <button type="submit" class="signup__button">Sign up</button>

            <div class="signup__register">
               Already have an account? <a href="signin.html">Sign in</a> <br>
               ...or maybe register as a business partner instead! <a href="../auth/retirement-home-signup.html">Take me there</a>
            </div>
         </form>
      </div>
   </body>
