       <div class="verify-retirement-home__container">
        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
          <div class="alert alert-danger">
            <%= errorMessage %>
          </div>
        <% } else { %>
          <div class="card verify-retirement-home__card">
            <div class="card-body">
              <h5 class="card-title verify-retirement-home__title">Verify Retirement Home</h5>
              <div class="mb-3 verify-retirement-home__info">
                <div class="info-item">
                  <strong>Email:</strong> <%= email %>
                </div>
                <div class="info-item">
                  <strong>Retirement home name:</strong> <%= name %>
                </div>
                <div class="info-item">
                  <strong>Rating:</strong> <%= rating %>
                </div>
                <div class="info-item">
                  <strong>Phone:</strong> <%= phone %>
                </div>
                <div class="info-item">
                  <strong>Website:</strong> <%= website %>
                </div>
                <div class="info-item">
                  <strong>City:</strong> <%= city %>
                </div>
                <div class="info-item">
                  <strong>Latitude:</strong> <%= latitude %>
                </div>
                <div class="info-item">
                  <strong>Longitude:</strong> <%= longitude %>
                </div>
              </div>
              <% if (typeof message !== 'undefined' && message) { %>
                <% if (message.startsWith('Fail')) { %>
                    <div class="alert alert-danger">
                        <%= message %>
                    </div>
                <% } else if (message.startsWith('Success')){ %>
                    <div class="alert alert-success">
                        <%= message %>
                    </div>
                <% } %>
            <% } %>
              <form method="POST" action="" >
                <input type="hidden" name="email" value="<%= email %>">
                <input type="hidden" name="name" value="<%= name %>">
                <input type="hidden" name="rating" value="<%= rating %>">
                <input type="hidden" name="phone" value="<%= phone %>">
                <input type="hidden" name="website" value="<%= website %>">
                <input type="hidden" name="city" value="<%= city %>">
                <input type="hidden" name="latitude" value="<%= latitude %>">
                <input type="hidden" name="longitude" value="<%= longitude %>">
                <button type="submit" class="btn btn-primary btn-block verify-retirement-home__button">VERIFY</button>
              </form>
            </div>
          </div>
        <% } %>
      </div>
</body>
