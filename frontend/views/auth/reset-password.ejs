<!DOCTYPE html>
   <html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Seniority</title>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css" crossorigin="">
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
      <link rel="stylesheet" href="/../../main.css">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
      <script src="../../assets/scripts/navbar.js" defer></script>
   </head>
   <body>
      
      <div class="reset-password">
         <img src="/../../assets/images/login-form.jpg" alt="image" class="reset-password__bg">

         <form method="POST" action = "" class="reset-password__form">
            <h1 class="reset-password__title">Reset your password</h1>

            <div class="reset-password__inputs">
               <div class="reset-password__box">
                  <input type="password" placeholder="Password" name = "password" required class="reset-password__input">
                  <i class="ri-mail-fill"></i>
               </div>
               
               <div class="reset-password__box">
                  <input type="password" placeholder="Confirm password" name = "confirm_password" required class="reset-password__input">
                  <i class="ri-lock-2-fill"></i>
               </div>
            </div>
            <% if (typeof message !== 'undefined' && message) { %>
               <% if (message.startsWith('Fail')) { %>
                   <div class="alert alert-danger">
                       <%= message %>
                   </div>
               <% } else if (message.startsWith('Success')){ %>
                   <div class="alert alert-success">
                       <%= message %>
                   </div>
               <% } %>
           <% } %>
            <button type="submit" class="reset-password__button">Reset</button>
         </form>
      </div>
   </body>
    
</html>